{
  "name": "roadmap-editor",
  "displayName": "Roadmap Editor",
  "description": "ROADMAP.md dosyalarini gorsel olarak duzenleyin",
  "version": "1.0.0",
  "publisher": "roadmap-editor",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kenfrozz/roadmap-editor-vscode"
  },
  "icon": "media/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:roadmapEditor.open"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "roadmapEditor.open",
        "title": "Roadmap Editor: Open (Tab)"
      },
      {
        "command": "roadmapEditor.openSidebar",
        "title": "Roadmap Editor: Open in Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "roadmap-editor",
          "title": "Roadmap Editor",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "roadmap-editor": [
        {
          "type": "webview",
          "id": "roadmapEditor.sidebar",
          "name": "Roadmap"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "autoprefixer": "^10.4.17",
    "esbuild": "^0.20.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "lucide-react": "^0.344.0",
    "marked": "^17.0.1",
    "react": "^18.2.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
