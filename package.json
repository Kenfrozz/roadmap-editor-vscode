{
  "name": "kairos",
  "displayName": "Kairos",
  "description": "Proje gelistirme kokpiti â€” PRD, plan, Git ve AI araclari tek arayuzden",
  "version": "1.13.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kenfrozz/kairos"
  },
  "scripts": {
    "build": "npm run build:shared && npm run build:renderer && npm run build:electron",
    "build:shared": "npm -w @kairos/shared run build",
    "build:renderer": "npm -w @kairos/renderer run build",
    "build:electron": "npm -w @kairos/electron run build",
    "dev:renderer": "npm -w @kairos/renderer run dev",
    "dev:electron": "concurrently \"npm run dev:renderer\" \"wait-on tcp:5173 && npm -w @kairos/electron run start\"",
    "package:electron": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/pdfkit": "^0.17.5",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "lucide-react": "^0.344.0",
    "marked": "^17.0.1",
    "pdfkit": "^0.15.2",
    "react": "^18.2.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.19.0"
  }
}
